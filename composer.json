{
    "name": "ab-alselwi/laravel-arabic-html",
    "description": "Convert laravel view to arabic html (pdf) by using ArPHP and dompdf with arabic fonts and text.",
    "license": "MIT",
    "keywords": [
        "Arabic",
        "arabic-glyphs",
        "arabic-calendar",
        "arabic-html",
        "arabic-dompdf"
    ],
    "authors": [
        {
            "name": "Abdulfattah Alselwi",
            "email": "abalselwi.job@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3||^8.0",
        "barryvdh/laravel-dompdf": "^1.0||^2.0",
        "illuminate/support": "^6|^7|^8|^9|^10",
        "illuminate/view": "^6|^7|^8|^9|^10",
        "khaled.alshamaa/ar-php": "^6.2"
    },
    "autoload": {
        "psr-4": {
            "Ab\\ArabicHTML\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ab\\ArabicHTML\\Test\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ab\\ArabicHTML\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}